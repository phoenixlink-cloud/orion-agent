# =============================================================================
# Orion Agent Configuration
# =============================================================================
# Copy this file to .env and fill in your values.
# DO NOT commit .env to version control.
#
# Only configure the providers you want to use.
# Local/free alternatives (Ollama) work without any keys.
#
# Copyright (C) 2025 Phoenix Link (Pty) Ltd
# =============================================================================

# =============================================================================
# LLM PROVIDERS (configure at least one)
# =============================================================================

# OpenAI
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Google (Gemini)
GOOGLE_API_KEY=your-google-api-key-here

# Groq
GROQ_API_KEY=your-groq-key-here

# Mistral
MISTRAL_API_KEY=your-mistral-key-here

# Cohere
COHERE_API_KEY=your-cohere-key-here

# Together AI
TOGETHER_API_KEY=your-together-key-here

# OpenRouter
OPENROUTER_API_KEY=your-openrouter-key-here

# DeepSeek
DEEPSEEK_API_KEY=your-deepseek-key-here

# Perplexity
PERPLEXITY_API_KEY=your-perplexity-key-here

# Fireworks
FIREWORKS_API_KEY=your-fireworks-key-here

# =============================================================================
# LOCAL PROVIDERS (no API key required)
# =============================================================================

# Ollama (default: http://localhost:11434)
OLLAMA_HOST=http://localhost:11434

# =============================================================================
# OPTIONAL: VOICE & IMAGE
# =============================================================================

# ElevenLabs (TTS)
ELEVENLABS_API_KEY=your-elevenlabs-key-here

# Deepgram (STT/TTS)
DEEPGRAM_API_KEY=your-deepgram-key-here

# AssemblyAI (STT)
ASSEMBLYAI_API_KEY=your-assemblyai-key-here

# Stability AI (Image)
STABILITY_API_KEY=your-stability-key-here

# Replicate (Image/Video)
REPLICATE_API_TOKEN=your-replicate-token-here

# Leonardo.ai (Image)
LEONARDO_API_KEY=your-leonardo-key-here

# Fal.ai (Image)
FAL_KEY=your-fal-key-here

# =============================================================================
# OPTIONAL: DEV TOOLS & MESSAGING
# =============================================================================

# GitHub
GITHUB_TOKEN=ghp_your-github-token-here

# GitLab
GITLAB_TOKEN=your-gitlab-token-here

# Slack
SLACK_BOT_TOKEN=xoxb-your-slack-token-here

# Discord
DISCORD_BOT_TOKEN=your-discord-bot-token-here

# Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# =============================================================================
# ORION SETTINGS
# =============================================================================

# Default governance mode (safe, pro, project)
ORION_DEFAULT_MODE=safe

# API server (for web UI)
ORION_API_HOST=127.0.0.1
ORION_API_PORT=8001

# Features
ORION_ENABLE_MEMORY=true
ORION_ENABLE_LEARNING=true
ORION_SANDBOX_ENABLED=true

# Rate limiting (requests per minute)
ORION_RATE_LIMIT=120

# API authentication (set if exposing beyond localhost)
# ORION_AUTH_TOKEN=generate-a-secure-key-here
